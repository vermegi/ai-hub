{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rgName": {
            "type": "string",
            "metadata": {
                "description": "Select the naming convertion for the resource group that will be created"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Provide the Azure region for the storage accont"
            }
        },
        "prefix": {
            "type": "string",
            "metadata": {
                "description": "Provide a prefix for the resources that will be created as part of the storage account"
            }
        },
        "acaworkloadprofile": {
            "type": "string",
            "defaultValue": "Consumption"
        },
        "environmentId": {
            "type": "string",
            "defaultValue": ""
        },
        "acaSystemIdentity": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "Yes",
                "No"
            ]
        }
    },
    "variables": {
        "name-compliant-aca1": "[toLower(take(concat(replace(replace(parameters('prefix'), '-', ''), '_', ''), parameters('location'), 'fe'), 23))]",
        "name-compliant-aca2": "[toLower(take(concat(replace(replace(parameters('prefix'), '-', ''), '_', ''), parameters('location'), 'be'), 23))]",
        "name-compliant-aca-job1": "[toLower(take(concat(replace(replace(parameters('prefix'), '-', ''), '_', ''), parameters('location'), 'pyjob'), 23))]",
        "name-compliant-aca-job2": "[toLower(take(concat(replace(replace(parameters('prefix'), '-', ''), '_', ''), parameters('location'), 'job2', uniqueString(deployment().name)), 23))]",
        "name-compliant-azMon": "[concat(parameters('prefix'), '-', parameters('location'), '-azmon')]",
        "name-compliant-acame": "[take(concat(parameters('prefix'), '-', parameters('location'), '-acame'), 23)]",
        "acaIdentity": {
            "type": "SystemAssigned"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2022-09-01",
            "location": "[parameters('location')]",
            "name": "[parameters('rgName')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "name": "aca-deployment",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "type": "Microsoft.App/containerapps",
                            "apiVersion": "2024-03-01",
                            "name": "[variables('name-compliant-aca1')]",
                            "location": "[parameters('location')]",
                            "identity": "[if(equals(parameters('acaSystemIdentity'), 'Yes'), variables('acaIdentity'), json('null'))]",
                            "properties": {
                                "environmentId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('rgName'), '/providers/Microsoft.App/managedEnvironments/', variables('name-compliant-acame'))]",
                                "configuration": {
                                    "activeRevisionsMode": "Single",
                                    "ingress": {
                                        "external": true,
                                        "targetPort": 80,
                                        "traffic": [
                                            {
                                                "weight": 100,
                                                "latestRevision": true
                                            }
                                        ]
                                    }
                                },
                                "template": {
                                    "containers": [
                                        {
                                            "image": "belstarr/ai-search-api:v0.0.20",
                                            "name": "ai-search-api-container",
                                            "resources": {
                                                "cpu": 0.25,
                                                "memory": "0.5Gi",
                                                "ephemeralStorage": "1Gi"
                                            }
                                        }
                                    ],
                                    "scale": {
                                        "minReplicas": 1,
                                        "maxReplicas": 3
                                    }
                                }
                            }
                        },
                        {
                            "type": "Microsoft.App/containerapps",
                            "apiVersion": "2024-03-01",
                            "name": "[variables('name-compliant-aca2')]",
                            "location": "[parameters('location')]",
                            "identity": "[if(equals(parameters('acaSystemIdentity'), 'Yes'), variables('acaIdentity'), json('null'))]",
                            "properties": {
                                "environmentId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('rgName'), '/providers/Microsoft.App/managedEnvironments/', variables('name-compliant-acame'))]",
                                "configuration": {
                                    "activeRevisionsMode": "Single",
                                    "ingress": {
                                        "external": true,
                                        "targetPort": 80,
                                        "traffic": [
                                            {
                                                "weight": 100,
                                                "latestRevision": true
                                            }
                                        ]
                                    }
                                },
                                "template": {
                                    "containers": [
                                        {
                                            "image": "belstarr/ai-search-api:v0.0.20",
                                            "name": "ai-search-api-container",
                                            "resources": {
                                                "cpu": 0.25,
                                                "memory": "0.5Gi",
                                                "ephemeralStorage": "1Gi"
                                            }
                                        }
                                    ],
                                    "scale": {
                                        "minReplicas": 1,
                                        "maxReplicas": 3
                                    }
                                }
                            }
                        },
                        {
                            "type": "Microsoft.App/jobs",
                            "apiVersion": "2024-03-01",
                            "name": "[variables('name-compliant-aca-job1')]",
                            "location": "[parameters('location')]",
                            "identity": "[if(equals(parameters('acaSystemIdentity'), 'Yes'), variables('acaIdentity'), json('null'))]",
                            "properties": {
                              "configuration": {

                                "replicaRetryLimit": 0,
                                "replicaTimeout": 1800,
                                "manualTriggerConfig": {
                                    "parallelism": 1,
                                    "replicaCompletionCount": 1
                                  },
                                "triggerType": "Manual"
                              },
                              "environmentId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('rgName'), '/providers/Microsoft.App/managedEnvironments/', variables('name-compliant-acame'))]",
                              "template": {
                                "containers": [
                                  {
                                    "image": "mcr.microsoft.com/k8se/quickstart-jobs:latest",
                                    "name": "main",
                                    "resources": {
                                      "cpu": 0.25,
                                      "memory": "0.5Gi"
                                    }
                                  }
                                ]
                              },
                              "workloadProfileName": "Consumption"
                            }
                          },
                          {
                            "type": "Microsoft.App/jobs",
                            "apiVersion": "2024-03-01",
                            "name": "[variables('name-compliant-aca-job2')]",
                            "location": "[parameters('location')]",
                            "identity": "[if(equals(parameters('acaSystemIdentity'), 'Yes'), variables('acaIdentity'), json('null'))]",
                            "properties": {
                              "configuration": {

                                "replicaRetryLimit": 0,
                                "replicaTimeout": 1800,
                                "manualTriggerConfig": {
                                    "parallelism": 1,
                                    "replicaCompletionCount": 1
                                  },
                                "triggerType": "Manual"
                              },
                              "environmentId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('rgName'), '/providers/Microsoft.App/managedEnvironments/', variables('name-compliant-acame'))]",
                              "template": {
                                "containers": [
                                  {
                                    "image": "mcr.microsoft.com/k8se/quickstart-jobs:latest",
                                    "name": "main",
                                    "resources": {
                                      "cpu": 0.25,
                                      "memory": "0.5Gi"
                                    }
                                  }
                                ]
                              },
                              "workloadProfileName": "Consumption"
                            }
                          }                                
                    ]
                }
            }
        }
    ]
}