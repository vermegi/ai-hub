{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rgName": {
            "type": "string",
            "metadata": {
                "description": "Select the naming convertion for the resource group that will be created"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Provide the Azure region for the storage accont"
            }
        },
        "prefix": {
            "type": "string",
            "metadata": {
                "description": "Provide a prefix for the resources that will be created as part of the storage account"
            }
        },
        "acaworkloadprofile": {
            "type": "string",
            "defaultValue": "Consumption"
        },
        "acaSystemIdentity": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "Yes",
                "No"
            ]
        },
        "speechRegion": {
            "type": "string",
            "defaultValue": "westus"
        },
        "pfEndpointName": {
            "type": "string",
            "defaultValue": ""
        },
        "pfDeploymentName": {
            "type": "string",
            "defaultValue": "blue"
        },
        "pfEndpointKey": {
            "type": "string",
            "defaultValue": ""
        },
        "azureOpenAIEndpoint": {
            "type": "string",
            "defaultValue": ""
        },
        "azureOpenAIModelDeployment": {
            "type": "string",
            "defaultValue": ""
        },
        "storageUrl": {
            "type": "string",
            "defaultValue": ""
        },
        "openaiApiType": {
            "type": "string",
            "defaultValue": "azure"
        },
        "openaiDeploymentEmbedding": {
            "type": "string",
            "defaultValue": ""
        },
        "azureOpenAIEmbeddingName": {
            "type": "string",
            "defaultValue": ""
        },
        "azureOpenAIModelName": {
            "type": "string",
            "defaultValue": ""
        },
        "searchServiceName": {
            "type": "string",
            "defaultValue": ""
        },
        "searchIndexName": {
            "type": "string",
            "defaultValue": "avatarindex"
        },
        "aiSearchServiceEndpoint": {
            "type": "string",
            "defaultValue": ""
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "name-compliant-aca-fe": "[toLower(take(concat(replace(replace(parameters('prefix'), '-', ''), '_', ''), parameters('location'), 'fe'), 23))]",
        "name-compliant-aca-be": "[toLower(take(concat(replace(replace(parameters('prefix'), '-', ''), '_', ''), parameters('location'), 'be'), 23))]",
        "name-compliant-aca-job-py": "[toLower(take(concat(replace(replace(parameters('prefix'), '-', ''), '_', ''), parameters('location'), 'pyjob'), 23))]",
        "name-compliant-aca-job-node": "[toLower(take(concat(replace(replace(parameters('prefix'), '-', ''), '_', ''), parameters('location'), 'nodejob', uniqueString(deployment().name)), 23))]",
        "name-compliant-azMon": "[concat(parameters('prefix'), '-', parameters('location'), '-azmon')]",
        "name-compliant-acame": "[take(concat(parameters('prefix'), '-', parameters('location'), '-acame'), 23)]",
        "name-compliant-azureSpeech": "[concat(parameters('prefix'), '-', parameters('location'), '-aispeech')]",
        "acaIdentity": {
            "type": "SystemAssigned"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2022-09-01",
            "location": "[parameters('location')]",
            "name": "[parameters('rgName')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "name": "aca-deployment",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "type": "Microsoft.App/containerapps",
                            "apiVersion": "2024-03-01",
                            "name": "[variables('name-compliant-aca-fe')]",
                            "location": "[parameters('location')]",
                            "identity": "[if(equals(parameters('acaSystemIdentity'), 'Yes'), variables('acaIdentity'), json('null'))]",
                            "properties": {
                                "environmentId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('rgName'), '/providers/Microsoft.App/managedEnvironments/', variables('name-compliant-acame'))]",
                                "configuration": {
                                    "activeRevisionsMode": "Single",
                                    "ingress": {
                                        "external": true,
                                        "targetPort": 80,
                                        "traffic": [
                                            {
                                                "weight": 100,
                                                "latestRevision": true
                                            }
                                        ]
                                    }
                                },
                                "template": {
                                    "containers": [
                                        {
                                            "image": "belstarr/ai-search-api:v0.0.20",
                                            "name": "ai-search-api-container",
                                            "resources": {
                                                "cpu": 0.25,
                                                "memory": "0.5Gi",
                                                "ephemeralStorage": "1Gi"
                                            }
                                        }
                                    ],
                                    "scale": {
                                        "minReplicas": 1,
                                        "maxReplicas": 3
                                    }
                                }
                            }
                        },
                        {
                            "type": "Microsoft.App/containerapps",
                            "apiVersion": "2024-03-01",
                            "name": "[variables('name-compliant-aca-be')]",
                            "location": "[parameters('location')]",
                            "identity": "[if(equals(parameters('acaSystemIdentity'), 'Yes'), variables('acaIdentity'), json('null'))]",
                            "properties": {
                                "environmentId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('rgName'), '/providers/Microsoft.App/managedEnvironments/', variables('name-compliant-acame'))]",
                                "configuration": {
                                    "activeRevisionsMode": "Single",
                                    "ingress": {
                                        "external": true,
                                        "targetPort": 80,
                                        "traffic": [
                                            {
                                                "weight": 100,
                                                "latestRevision": true
                                            }
                                        ]
                                    }
                                },
                                "template": {
                                    "containers": [
                                        {
                                            "image": "belstarr/ai-search-api:v0.0.20",
                                            "name": "ai-search-api-container",
                                            "resources": {
                                                "cpu": 0.25,
                                                "memory": "0.5Gi",
                                                "ephemeralStorage": "1Gi"
                                            },
                                            "env": [
                                                {
                                                    "name": "SPEECH_REGION",
                                                    "value": "[parameters('speechRegion')]"
                                                },
                                                {
                                                    "name": "SPEECH_KEY",
                                                    "value": "[listKeys(resourceId(subscription().subscriptionId, parameters('rgName'), 'Microsoft.CognitiveServices/accounts', variables('name-compliant-azureSpeech')), '2023-05-01').key1]"
                                                },
                                                {
                                                    "name": "SPEECH_URL",
                                                    "value": "[reference(resourceId(subscription().subscriptionId, parameters('rgName'), 'Microsoft.CognitiveServices/accounts', variables('name-compliant-azureSpeech')), '2024-10-01', 'Full').properties.endpoint]"
                                                },
                                                {
                                                    "name": "SPEECH_RESOURCE_URL",
                                                    "value": "[reference(resourceId(subscription().subscriptionId, parameters('rgName'), 'Microsoft.CognitiveServices/accounts', variables('name-compliant-azureSpeech')), '2024-10-01', 'Full').resourceId]"
                                                },
                                                {
                                                    "name": "ORCHESTRATOR_MODULE",
                                                    "value": "conversation_orchestrator"
                                                },
                                                {
                                                    "name": "ORCHESTRATOR_CLASS",
                                                    "value": "PF_Orchestrator"
                                                },
                                                {
                                                    "name": "PF_ENDPOINT_NAME",
                                                    "value": "[parameters('pfEndpointName')]"
                                                },
                                                {
                                                    "name": "PF_DEPLOYMENT_NAME",
                                                    "value": "[parameters('pfDeploymentName')]"
                                                },
                                                {
                                                    "name": "PF_ENDPOINT_KEY",
                                                    "value": "[parameters('pfEndpointKey')]"
                                                },
                                                {
                                                    "name": "AZURE_OPENAI_ENDPOINT",
                                                    "value": "[parameters('azureOpenAIEndpoint')]"
                                                },
                                                {
                                                    "name": "AZURE_OPENAI_DEPLOYMENT_NAME",
                                                    "value": "[parameters('azureOpenAIModelDeployment')]"
                                                },
                                                {
                                                    "name": "STORAGE_URL",
                                                    "value": "[parameters('storageUrl')]"
                                                },
                                                {
                                                    "name": "BLOB_CONNECTION_STRING_MSI",
                                                    "value": "[parameters('storageUrl')]"
                                                },
                                                {
                                                    "name": "BLOB_CONTAINER_NAME",
                                                    "value": "avatardocs"
                                                }
                                            ]
                                        }
                                    ],
                                    "scale": {
                                        "minReplicas": 1,
                                        "maxReplicas": 3
                                    }
                                }
                            }
                        },
                        {
                            "type": "Microsoft.App/jobs",
                            "apiVersion": "2024-03-01",
                            "name": "[variables('name-compliant-aca-job-py')]",
                            "location": "[parameters('location')]",
                            "identity": "[if(equals(parameters('acaSystemIdentity'), 'Yes'), variables('acaIdentity'), json('null'))]",
                            "properties": {
                              "configuration": {

                                "replicaRetryLimit": 0,
                                "replicaTimeout": 1800,
                                "manualTriggerConfig": {
                                    "parallelism": 1,
                                    "replicaCompletionCount": 1
                                  },
                                "triggerType": "Manual"
                              },
                              "environmentId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('rgName'), '/providers/Microsoft.App/managedEnvironments/', variables('name-compliant-acame'))]",
                              "template": {
                                "containers": [
                                  {
                                    "image": "mcr.microsoft.com/k8se/quickstart-jobs:latest",
                                    "name": "main",
                                    "resources": {
                                      "cpu": 0.25,
                                      "memory": "0.5Gi"
                                    },
                                    "env": [
                                        {
                                            "name": "OPENAI_API_BASE",
                                            "value": "[parameters('azureOpenAIEndpoint')]"
                                        },
                                        {
                                            "name": "OPENAI_API_TYPE",
                                            "value": "[parameters('openaiApiType')]"
                                        },
                                        {
                                            "name": "OPENAI_DEPLOYMENT_EMBEDDING",
                                            "value": "[parameters('openaiDeploymentEmbedding')]"
                                        },
                                        {
                                            "name": "OPENAI_MODEL_EMBEDDING",
                                            "value": "[parameters('azureOpenAIEmbeddingName')]"
                                        },
                                        {
                                            "name": "OPENAI_DEPLOYMENT_COMPLETION",
                                            "value": "[parameters('azureOpenAIModelDeployment')]"
                                        },
                                        {
                                            "name": "OPENAI_MODEL_COMPLETION",
                                            "value": "[parameters('azureOpenAIModelName')]"
                                        },
                                        {
                                            "name": "AISEARCH_NAME",
                                            "value": "[parameters('searchServiceName')]"
                                        },
                                        {
                                            "name": "AISEARCH_INDEX_NAME",
                                            "value": "[parameters('searchIndexName')]"
                                        },
                                        {
                                            "name": "AISEARCH_ENDPOINT",
                                            "value": "[parameters('aiSearchServiceEndpoint')]"
                                        },
                                        {
                                            "name": "STORAGE_ACCOUNT_NAME",
                                            "value": "[parameters('storageAccountName')]"
                                        },
                                        {
                                            "name": "STORAGE_URL",
                                            "value": "[parameters('storageUrl')]"
                                        },
                                        {
                                            "name": "BLOB_CONNECTION_STRING_MSI",
                                            "value": "[parameters('storageUrl')]"
                                        },
                                        {
                                            "name": "BLOB_CONTAINER_NAME",
                                            "value": "avatardocs"
                                        }
                                    ]
                                  }
                                ]
                              },
                              "workloadProfileName": "Consumption"
                            }
                          },
                          {
                            "type": "Microsoft.App/jobs",
                            "apiVersion": "2024-03-01",
                            "name": "[variables('name-compliant-aca-job-node')]",
                            "location": "[parameters('location')]",
                            "identity": "[if(equals(parameters('acaSystemIdentity'), 'Yes'), variables('acaIdentity'), json('null'))]",
                            "properties": {
                              "configuration": {

                                "replicaRetryLimit": 0,
                                "replicaTimeout": 1800,
                                "manualTriggerConfig": {
                                    "parallelism": 1,
                                    "replicaCompletionCount": 1
                                  },
                                "triggerType": "Manual"
                              },
                              "environmentId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('rgName'), '/providers/Microsoft.App/managedEnvironments/', variables('name-compliant-acame'))]",
                              "template": {
                                "containers": [
                                  {
                                    "image": "mcr.microsoft.com/k8se/quickstart-jobs:latest",
                                    "name": "main",
                                    "resources": {
                                      "cpu": 0.25,
                                      "memory": "0.5Gi"
                                    },
                                    "env": [
                                        {
                                            "name": "BACKEND_URI",
                                            "value": "yada-dada for now"
                                        }
                                    ]
                                  }
                                ]
                              },
                              "workloadProfileName": "Consumption"
                            }
                          }                                
                    ]
                }
            }
        }
    ]
}